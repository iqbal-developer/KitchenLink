<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="KitchenLink - Find and book professional kitchen spaces for your culinary needs">
    <meta name="keywords" content="kitchen rental, commercial kitchen, food business, kitchen space">
    <title>KitchenLink - {{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #198754;
            --primary-light: rgba(25, 135, 84, 0.1);
            --dark: #212529;
            --secondary: #6c757d;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: var(--dark);
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: white !important;
            box-shadow: 0 2px 4px rgba(0,0,0,.08);
        }

        .navbar-brand {
            color: var(--dark) !important;
            font-weight: 600;
        }

        .nav-link {
            color: var(--secondary) !important;
            transition: color 0.3s ease;
        }

        .nav-link:hover, .nav-link:focus {
            color: var(--dark) !important;
        }

        .nav-link.active {
            color: var(--primary-color) !important;
        }

        .btn-primary {
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }

        .btn-outline-primary {
            color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }

        .btn-outline-primary:hover {
            background-color: var(--primary-color) !important;
            color: white !important;
        }

        .text-primary {
            color: var(--primary-color) !important;
        }

        .bg-primary-light {
            background-color: var(--primary-light) !important;
        }

        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
        }

        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15);
            transition: box-shadow 0.3s ease;
        }

        .footer {
            background-color: white;
            color: var(--secondary);
            border-top: 1px solid rgba(0,0,0,.1);
        }

        .footer a {
            color: var(--secondary);
            text-decoration: none;
        }

        .footer a:hover {
            color: var(--dark);
        }
    </style>
</head>
<body>
    {{> header}}

    <main class="container py-4">
        {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>{{success}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {{/if}}
        {{#if error}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>{{error}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {{/if}}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        {{{body}}}
        <script>
            // Initialize all dropdowns
            document.addEventListener('DOMContentLoaded', () => {
                // Initialize dropdowns
                const dropdownElementList = document.querySelectorAll('.dropdown-toggle');
                const dropdownList = [...dropdownElementList].map(dropdownToggleEl => new bootstrap.Dropdown(dropdownToggleEl));
                
                // Initialize tooltips if any
                const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
                const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));
                
                // Initialize popovers if any
                const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]');
                const popoverList = [...popoverTriggerList].map(popoverTriggerEl => new bootstrap.Popover(popoverTriggerEl));
            });
        </script>
    </main>

